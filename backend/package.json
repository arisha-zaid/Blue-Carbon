{
  "name": "carbon-sih-backend",
  "version": "1.0.0",
  "description": "Backend API for Carbon SIH project with authentication",
  "main": "server.js",
  "type": "commonjs",

  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test-db": "node test-server.js",
    "setup": "node scripts/setup.js",
    "setup:full": "npm install && node scripts/setup.js",
    "compile": "node scripts/compileContracts.js",
    "deploy": "node scripts/deploy.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:blockchain": "tail -f logs/blockchain.log"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@truffle/hdwallet-provider": "^2.1.15",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "coinbase-commerce-node": "^1.0.4",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "ethers": "^6.10.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.2.1",
    "ganache-cli": "^6.12.2",
    "helmet": "^7.2.0",
    "ipfs-http-client": "^57.0.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.0",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "plaid": "^38.1.0",
    "redis": "^4.6.12",
    "socket.io": "^4.7.4",
    "solc": "^0.8.20",
    "stripe": "^18.5.0",
    "web3": "^4.5.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "cross-env": "^10.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "carbon",
    "sih",
    "authentication",
    "oauth",
    "api"
  ],
  "author": "Carbon SIH Team",
  "license": "MIT"
}
